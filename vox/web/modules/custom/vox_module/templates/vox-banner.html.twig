<div id="banner">
  <img src="/{{ banner }}" class="banner-img">
  <div class="banner-desc">
    <h1>
      {{ title }}
    </h1>
    <form>
      <div class="col-auto">
        <input type="text" name="keyword" placeholder="Keyword ..." class="form-control">
        <button type="submit" class="btn btn-primary mb-3">
          Search
        </button>
      </div>
    </form>
    <p>
      {{ subtitle }}
    </p>
  </div>
</div>
